{
  "extends": "airbnb-base",
  "parser": "babel-eslint",

  "plugins": [],

  "env": {
    "mocha": true,
    "browser": true,
  },

  "globals": {
    "_": true,
    "document": true,
    "window": true
  },

  "rules": {
    "no-multi-spaces": 0,
    "react/jsx-boolean-value": 0,
    "object-shorthand": 0,
    "no-param-reassign": 0,
    "maximumLineLength": 0,
    "arrow-body-style": 0,
    "no-plusplus": 0,
    "arrow-parens": ['error', 'as-needed', {
      requireForBlockBody: false,
    }],
  }
}